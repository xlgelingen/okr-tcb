.page-container{
  position: relative;
  display: flex;
  flex-direction: column;
}

/*用户模块*/
.user-section{
  padding: 50rpx 40rpx;
}

.login-container{
  display: flex;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.avatar-img {
  display: block;
  width: 56px;
  height: 56px;
}

.avater-descrb{
  margin-top: 20rpx;
  color: #666;
  font-weight: 400;
  width: fit-content;
}

/*登录按钮*/
.login-btn{
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 520rpx;
  height: 120rpx;
  color: #fff;
  font-size: 18px;
  border-radius: 4px;
  background-color: #1aad19;
}

.login-btn_hover{
  opacity: .8;
}