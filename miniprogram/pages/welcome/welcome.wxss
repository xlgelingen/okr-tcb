.scrollarea {
  height: 100%;
  flex: 1;
  overflow-y: hidden;
}
.page-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0;
  background-color: #f5f5f5;
  background: linear-gradient( #9df0c5, #f5f5f5);
} 
.content-contauner{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 80rpx;
  justify-content: center;
}

.content-title{
  font-weight: 600;
  font-size: 25px;
  color: #333;
}
.content-subtitle{
  font-weight: 600;
  font-size: 16px;
  margin-bottom: 100rpx;
}

.content-text{
  font-size: 14px;
